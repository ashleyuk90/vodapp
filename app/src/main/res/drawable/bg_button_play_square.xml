<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_elevated" />
            <stroke android:width="2dp" android:color="@color/brand_primary" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_elevated" />
            <stroke android:width="2dp" android:color="@color/brand_primary_dark" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_surface" />
            <stroke android:width="1dp" android:color="@color/border_subtle" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
