<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/background_primary"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/sideMenu"
        android:layout_width="@dimen/side_menu_width"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_menu"
        android:padding="@dimen/side_menu_padding"
        android:elevation="8dp">

        <LinearLayout
            android:id="@+id/sideMenuHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginBottom="4dp">

            <ImageButton
                android:id="@+id/btnMenuToggle"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                android:background="@android:color/transparent"
                android:contentDescription="@string/menu_collapse"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/text_primary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnMenuSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/side_menu_item_padding_vertical"
            android:paddingHorizontal="@dimen/side_menu_item_padding_horizontal"
            android:background="@drawable/focus_menu_item_enhanced"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusUp="@id/btnMenuProfile"
            android:nextFocusDown="@id/btnMenuHome"
            android:contentDescription="@string/a11y_search_button">

            <ImageView
                android:layout_width="@dimen/side_menu_icon_size"
                android:layout_height="@dimen/side_menu_icon_size"
                android:layout_marginEnd="@dimen/side_menu_icon_margin"
                android:src="@drawable/ic_search"
                android:importantForAccessibility="no"
                app:tint="@color/sel_menu_text_color"
                android:duplicateParentState="true" />

            <TextView
                android:id="@+id/txtMenuSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_search"
                android:textSize="@dimen/side_menu_text_size"
                android:textColor="@color/sel_menu_text_color"
                android:fontFamily="sans-serif-medium"
                android:duplicateParentState="true"
                android:importantForAccessibility="no" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginVertical="8dp"/>

        <LinearLayout
            android:id="@+id/btnMenuHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/side_menu_item_padding_vertical"
            android:paddingHorizontal="@dimen/side_menu_item_padding_horizontal"
            android:background="@drawable/focus_menu_item_enhanced"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusUp="@id/btnMenuSearch"
            android:nextFocusDown="@id/btnMenuWatchLater"
            android:contentDescription="@string/a11y_menu_home">

            <ImageView
                android:layout_width="@dimen/side_menu_icon_size"
                android:layout_height="@dimen/side_menu_icon_size"
                android:layout_marginEnd="@dimen/side_menu_icon_margin"
                android:src="@drawable/ic_home"
                android:importantForAccessibility="no"
                app:tint="@color/sel_menu_text_color"
                android:duplicateParentState="true" />

            <TextView
                android:id="@+id/txtMenuHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_home"
                android:textSize="@dimen/side_menu_text_size"
                android:textColor="@color/sel_menu_text_color"
                android:fontFamily="sans-serif-medium"
                android:duplicateParentState="true"
                android:importantForAccessibility="no" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnMenuWatchLater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/side_menu_item_padding_vertical"
            android:paddingHorizontal="@dimen/side_menu_item_padding_horizontal"
            android:layout_marginTop="2dp"
            android:background="@drawable/focus_menu_item_enhanced"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusUp="@id/btnMenuHome"
            android:nextFocusDown="@id/sideMenuScroll"
            android:contentDescription="@string/a11y_menu_watch_later">

            <ImageView
                android:layout_width="@dimen/side_menu_icon_size"
                android:layout_height="@dimen/side_menu_icon_size"
                android:layout_marginEnd="@dimen/side_menu_icon_margin"
                android:src="@drawable/ic_watch_later"
                android:importantForAccessibility="no"
                app:tint="@color/sel_menu_text_color"
                android:duplicateParentState="true" />

            <TextView
                android:id="@+id/txtMenuWatchLater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_watch_later"
                android:textSize="@dimen/side_menu_text_size"
                android:textColor="@color/sel_menu_text_color"
                android:fontFamily="sans-serif-medium"
                android:duplicateParentState="true"
                android:importantForAccessibility="no" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtLibraryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_library"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/side_menu_label_text_size"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="@dimen/side_menu_item_padding_horizontal"
            android:letterSpacing="0.15"/>

        <!-- Library list with scroll fade gradients -->
        <FrameLayout
            android:id="@+id/libraryContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            
            <ScrollView
                android:id="@+id/sideMenuScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:fadeScrollbars="true"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/sideMenuContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>
            
            <!-- Fade gradient at top (hidden by default, shown when scrolled) -->
            <View
                android:id="@+id/viewScrollFadeTop"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="top"
                android:background="@drawable/bg_scroll_fade_top"
                android:visibility="gone" />
            
            <!-- Fade gradient at bottom (shown when more content below) -->
            <View
                android:id="@+id/viewScrollFadeBottom"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_scroll_fade_bottom"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Profile Button at bottom of side menu -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/btnMenuProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingVertical="@dimen/side_menu_item_padding_vertical"
            android:paddingHorizontal="@dimen/side_menu_item_padding_horizontal"
            android:background="@drawable/focus_menu_item_enhanced"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusUp="@id/sideMenuScroll"
            android:nextFocusDown="@id/btnMenuSearch">

            <!-- Profile Avatar Circle -->
            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_marginEnd="@dimen/side_menu_icon_margin">

                <View
                    android:id="@+id/viewProfileAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_circle_profile" />

                <TextView
                    android:id="@+id/txtProfileInitial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="D" />

                <TextView
                    android:id="@+id/txtProfileUpdateBadge"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="top|end"
                    android:background="@drawable/bg_profile_update_badge"
                    android:contentDescription="@string/a11y_update_available"
                    android:gravity="center"
                    android:text="@string/update_badge_symbol"
                    android:textColor="@color/text_on_primary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:translationX="4dp"
                    android:translationY="-4dp"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtProfileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/profile_switch"
                android:textSize="@dimen/side_menu_text_size"
                android:textColor="@color/sel_menu_text_color"
                android:fontFamily="sans-serif-medium"
                android:duplicateParentState="true"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/layoutSearchOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="32dp"
            android:visibility="gone"
            android:background="@color/background_primary"
            android:elevation="10dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:descendantFocusability="afterDescendants">
            <EditText
                android:id="@+id/editSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_search_input"
                android:hint="@string/search_hint"
                android:importantForAutofill="no"
                android:textColorHint="@color/text_muted"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:padding="16dp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:nextFocusDown="@id/chipAll"/>
            
            <!-- Filter Chips -->
            <LinearLayout
                android:id="@+id/layoutFilterChips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Type Filter -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleLine="true"
                        app:singleSelection="true"
                        app:selectionRequired="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAll"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:focusable="true"
                            android:text="@string/filter_all"
                            android:textColor="@android:color/white"
                            app:chipBackgroundColor="@color/selector_chip_bg" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipMovies"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:text="@string/filter_movies"
                            android:textColor="@android:color/white"
                            app:chipBackgroundColor="@color/selector_chip_bg" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSeries"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:text="@string/filter_series"
                            android:textColor="@android:color/white"
                            app:chipBackgroundColor="@color/selector_chip_bg" />
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Clear Filters stays on first row and remains in-view -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipClearFilters"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:focusable="true"
                        android:text="@string/filter_clear"
                        android:textColor="@color/status_error"
                        android:visibility="gone"
                        app:chipBackgroundColor="@color/border_subtle"
                        app:chipIcon="@drawable/ic_close"
                        app:chipIconTint="@color/status_error" />
                </LinearLayout>

                <!-- Genre Filter wraps to additional lines instead of overflowing -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupGenre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:chipSpacingHorizontal="10dp"
                    app:chipSpacingVertical="10dp"
                    app:singleLine="false"
                    app:singleSelection="true"
                    app:selectionRequired="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAction"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/filter_action"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/selector_chip_bg" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipComedy"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/filter_comedy"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/selector_chip_bg" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipDrama"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/filter_drama"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/selector_chip_bg" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipHorror"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/filter_horror"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/selector_chip_bg" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSciFi"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/filter_scifi"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/selector_chip_bg" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAnimation"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/filter_animation"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/selector_chip_bg" />
                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/txtYearFilterLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="@string/filter_year_label"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:chipSpacingHorizontal="10dp"
                    app:chipSpacingVertical="10dp"
                    app:singleLine="false"
                    app:singleSelection="true"
                    app:selectionRequired="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipYearAny"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:focusable="true"
                        android:text="@string/filter_year_any"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/selector_chip_bg" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipYear2020s"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/filter_year_2020s"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/selector_chip_bg" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipYear2010s"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/filter_year_2010s"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/selector_chip_bg" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipYear2000s"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/filter_year_2000s"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/selector_chip_bg" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipYearBefore2000"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/filter_year_before_2000"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/selector_chip_bg" />
                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/txtRatingFilterLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="@string/filter_rating_label"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:chipSpacingHorizontal="10dp"
                    app:chipSpacingVertical="10dp"
                    app:singleLine="false"
                    app:singleSelection="true"
                    app:selectionRequired="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRatingAny"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:focusable="true"
                        android:text="@string/filter_rating_any"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/selector_chip_bg" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRating60"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/filter_rating_6_plus"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/selector_chip_bg" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRating70"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/filter_rating_7_plus"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/selector_chip_bg" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRating80"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/filter_rating_8_plus"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/selector_chip_bg" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
            
            <!-- Search Empty State -->
            <include 
                android:id="@+id/searchEmptyState"
                layout="@layout/layout_empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:visibility="gone" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/viewDashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="48dp">
                <RelativeLayout
                    android:id="@+id/layoutHero"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_hero_height"
                    android:focusable="false"
                    android:clipChildren="false">
                    <ImageView
                        android:id="@+id/imgHeroBackdrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:alpha="0.6"
                        android:importantForAccessibility="no"
                        tools:src="@tools:sample/backgrounds/scenic" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_hero_gradient"/>
                    
                    <!-- Hero Content -->
                    <LinearLayout
                        android:id="@+id/layoutHeroContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true"
                        android:padding="@dimen/home_hero_padding"
                        android:clipChildren="false"
                        android:clipToPadding="false">
                        
                        <TextView
                            android:id="@+id/txtHeroTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Fallout"
                            android:textSize="@dimen/home_title_text"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:shadowColor="#000000"
                            android:shadowRadius="8"
                            android:shadowDx="2"
                            android:shadowDy="2"/>
                        
                        <TextView
                            android:id="@+id/txtHeroMetadata"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="2024 • 1 Season • TV-MA"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/home_meta_text"
                            android:layout_marginTop="4dp"/>
                        
                        <TextView
                            android:id="@+id/txtHeroDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxWidth="720dp"
                            tools:text="The story of haves and have-nots..."
                            android:textColor="@color/text_tertiary"
                            android:textSize="@dimen/home_desc_text"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="6dp"
                            android:lineSpacingMultiplier="1.1"/>
                        
                        <!-- Hero Play Button (small icon) -->
                        <ImageButton
                            android:id="@+id/btnHeroPlay"
                            android:layout_width="@dimen/hero_play_button_size"
                            android:layout_height="@dimen/hero_play_button_size"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/ic_play"
                            android:background="@drawable/bg_button_play_square"
                            android:padding="@dimen/hero_play_button_padding"
                            android:scaleType="centerInside"
                            android:focusable="true"
                            android:contentDescription="@string/a11y_play_button"
                            app:tint="@color/text_on_brand" />
                    </LinearLayout>
                    
                    <!-- Hero Page Indicators (for auto-rotate) -->
                    <LinearLayout
                        android:id="@+id/layoutHeroIndicators"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:visibility="visible">
                        <!-- Indicators are added programmatically -->
                    </LinearLayout>
                    
                    <View
                        android:id="@+id/heroFocusBar"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/sel_hero_focus_bar"
                        android:duplicateParentState="true"
                        android:focusable="false"
                        android:clickable="false"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/home_section_margin_top"
                    android:layout_marginBottom="@dimen/home_section_margin_bottom"
                    android:layout_marginStart="@dimen/home_section_margin_start">
                    <View
                        android:layout_width="4dp"
                        android:layout_height="20dp"
                        android:background="@color/brand_primary"/>
                    <TextView
                        android:id="@+id/lblContinue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_continue_watching"
                        android:textColor="@color/brand_accent"
                        android:textSize="@dimen/home_section_title_text"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:accessibilityHeading="true"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvContinueWatching"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/home_list_side_padding"
                    android:paddingEnd="@dimen/home_list_side_padding"
                    android:layout_marginBottom="@dimen/home_list_bottom_margin"
                    android:contentDescription="@string/a11y_continue_watching_list"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/home_section_margin_bottom"
                    android:layout_marginStart="@dimen/home_section_margin_start">
                    <View
                        android:layout_width="4dp"
                        android:layout_height="20dp"
                        android:background="@color/brand_primary"/>
                    <TextView
                        android:id="@+id/lblRecentMovies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_recent_movies"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/home_section_title_text"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:accessibilityHeading="true"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecentMovies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/home_list_side_padding"
                    android:paddingEnd="@dimen/home_list_side_padding"
                    android:layout_marginBottom="@dimen/home_list_bottom_margin"
                    android:contentDescription="@string/a11y_recent_movies_list"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/home_section_margin_bottom"
                    android:layout_marginStart="@dimen/home_section_margin_start">
                    <View
                        android:layout_width="4dp"
                        android:layout_height="20dp"
                        android:background="@color/brand_primary"/>
                    <TextView
                        android:id="@+id/lblRecentShows"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_recent_tv"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/home_section_title_text"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:accessibilityHeading="true"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecentShows"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:contentDescription="@string/a11y_recent_tv_list"
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/home_list_side_padding"
                    android:paddingEnd="@dimen/home_list_side_padding"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layoutGridContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupSort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/spacing_lg"
                    android:paddingTop="@dimen/spacing_sm"
                    android:paddingBottom="@dimen/spacing_xs"
                    app:singleLine="true"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSortAZ"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:focusable="true"
                        android:text="@string/sort_az"
                        android:textColor="@color/selector_sort_chip_text"
                        android:textStyle="bold"
                        app:chipBackgroundColor="@color/selector_sort_chip_bg"
                        app:chipStrokeWidth="0dp"
                        app:chipMinHeight="32dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSortNewest"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/sort_newest"
                        android:textColor="@color/selector_sort_chip_text"
                        android:textStyle="bold"
                        app:chipBackgroundColor="@color/selector_sort_chip_bg"
                        app:chipStrokeWidth="0dp"
                        app:chipMinHeight="32dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSortRating"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/sort_rating"
                        android:textColor="@color/selector_sort_chip_text"
                        android:textStyle="bold"
                        app:chipBackgroundColor="@color/selector_sort_chip_bg"
                        app:chipStrokeWidth="0dp"
                        app:chipMinHeight="32dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSortRuntime"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/sort_runtime"
                        android:textColor="@color/selector_sort_chip_text"
                        android:textStyle="bold"
                        app:chipBackgroundColor="@color/selector_sort_chip_bg"
                        app:chipStrokeWidth="0dp"
                        app:chipMinHeight="32dp" />

                </com.google.android.material.chip.ChipGroup>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:descendantFocusability="afterDescendants"
                    android:clipToPadding="false"
                    android:padding="@dimen/spacing_lg"
                    android:saveEnabled="true"/>

            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollAlphabet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:background="@color/background_secondary"
                android:paddingHorizontal="@dimen/spacing_xs">
                <LinearLayout
                    android:id="@+id/containerAlphabet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingVertical="@dimen/spacing_lg"/>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
