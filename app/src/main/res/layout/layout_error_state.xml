<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutErrorState"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="48dp">

    <ImageView
        android:id="@+id/imgErrorIcon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_error"
        app:tint="@color/status_error" />

    <TextView
        android:id="@+id/txtErrorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/error_title"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:maxWidth="450dp"
        android:text="@string/error_generic"
        android:textColor="@color/text_secondary"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_min_height"
            android:contentDescription="@string/retry"
            android:focusable="true"
            android:nextFocusLeft="@id/btnRetry"
            android:paddingHorizontal="32dp"
            android:text="@string/retry"
            android:textColor="@color/text_on_brand"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold"
            android:background="@drawable/bg_button_play" />

        <Button
            android:id="@+id/btnGoBack"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_min_height"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_button_outline"
            android:focusable="true"
            android:paddingHorizontal="24dp"
            android:text="@string/go_back"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/button_text_size"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
