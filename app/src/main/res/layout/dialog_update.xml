<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_card"
    android:paddingTop="@dimen/spacing_xl"
    android:paddingBottom="@dimen/spacing_lg">

    <!-- Header: icon + title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/spacing_xl"
        android:paddingEnd="@dimen/spacing_xl">

        <ImageView
            android:id="@+id/iconUpdate"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_download"
            app:tint="@color/brand_primary"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/txtUpdateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/details_title_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/spacing_lg"
        android:layout_marginStart="@dimen/spacing_xl"
        android:layout_marginEnd="@dimen/spacing_xl"
        android:background="@color/divider" />

    <!-- Scrollable content area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="@dimen/spacing_xl"
        android:paddingEnd="@dimen/spacing_xl"
        android:paddingTop="@dimen/spacing_lg"
        android:clipToPadding="false"
        android:fadeScrollbars="false"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Current version -->
            <TextView
                android:id="@+id/txtCurrentVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/episode_title_text_size" />

            <!-- New version -->
            <TextView
                android:id="@+id/txtNewVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/episode_title_text_size"
                android:textStyle="bold" />

            <!-- Mandatory message (hidden unless mandatory) -->
            <TextView
                android:id="@+id/txtMandatoryMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:text="@string/update_required_message"
                android:textColor="@color/status_warning"
                android:textSize="@dimen/episode_metadata_text_size"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- Changelog section (hidden if no changelog) -->
            <LinearLayout
                android:id="@+id/layoutChangelog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_changelog_heading"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/episode_metadata_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtChangelog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:textColor="@color/text_tertiary"
                    android:textSize="@dimen/episode_metadata_text_size"
                    android:lineSpacingExtra="3dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Divider above buttons -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/spacing_lg"
        android:layout_marginStart="@dimen/spacing_xl"
        android:layout_marginEnd="@dimen/spacing_xl"
        android:background="@color/divider" />

    <!-- Action buttons (fixed outside scroll) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lg"
        android:paddingStart="@dimen/spacing_xl"
        android:paddingEnd="@dimen/spacing_xl"
        android:gravity="end"
        android:orientation="horizontal">

        <!-- Skip this version (hidden if mandatory) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSkipVersion"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_min_height"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:background="@drawable/sel_button_accent"
            android:focusable="true"
            android:paddingStart="@dimen/spacing_lg"
            android:paddingEnd="@dimen/spacing_lg"
            android:text="@string/update_action_skip"
            android:textAllCaps="true"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/button_text_size"
            android:visibility="gone" />

        <!-- Later (hidden if mandatory) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLater"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_min_height"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:background="@drawable/sel_button_accent"
            android:focusable="true"
            android:paddingStart="@dimen/spacing_lg"
            android:paddingEnd="@dimen/spacing_lg"
            android:text="@string/update_action_later"
            android:textAllCaps="true"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/button_text_size"
            android:visibility="gone" />

        <!-- Update now (always visible) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateNow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_min_height"
            android:background="@drawable/sel_button_accent"
            android:focusable="true"
            android:paddingStart="@dimen/spacing_xl"
            android:paddingEnd="@dimen/spacing_xl"
            android:text="@string/update_action_now"
            android:textAllCaps="true"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/button_text_size" />
    </LinearLayout>

</LinearLayout>
