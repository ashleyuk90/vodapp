<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="14dp"
    android:paddingHorizontal="16dp"
    android:layout_marginVertical="2dp"
    android:background="@drawable/sel_episode_item"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/txtEpNumber"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#888888"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@id/txtEpNumber"
        app:layout_constraintEnd_toStartOf="@id/btnEpPlay"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtEpTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Episode Title"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEpDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45m"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/txtEpPlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short plot description goes here..."
            android:textColor="#888888"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/btnEpPlay"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_play"
        android:padding="4dp"
        android:background="@drawable/bg_badge_dark"
        app:tint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>