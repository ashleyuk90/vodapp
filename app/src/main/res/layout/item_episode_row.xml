<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:paddingHorizontal="18dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/focus_episode_item"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/txtEpNumber"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/text_tertiary"
        android:textSize="@dimen/episode_title_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintStart_toEndOf="@id/txtEpNumber"
        app:layout_constraintEnd_toStartOf="@id/btnEpPlay"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtEpTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Episode Title"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/episode_title_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEpDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45m"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/episode_metadata_text_size"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/txtEpPlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short plot description goes here..."
            android:textColor="@color/text_tertiary"
            android:textSize="@dimen/episode_plot_text_size"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="6dp"/>

        <ProgressBar
            android:id="@+id/episodePlaybackProgress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:max="100"
            android:progressDrawable="@drawable/bg_progress_bar_yellow"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnEpPlay"
        android:layout_width="@dimen/icon_button_size"
        android:layout_height="@dimen/icon_button_size"
        android:src="@drawable/ic_play"
        android:padding="@dimen/icon_button_padding"
        android:background="@drawable/bg_badge_dark_enhanced"
        app:tint="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
