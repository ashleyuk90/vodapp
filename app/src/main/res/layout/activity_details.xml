<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:clipChildren="false"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/imgDetailsBackdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        tools:src="@tools:sample/backgrounds/scenic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_hero_gradient" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipChildren="false"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/details_padding"
            android:paddingTop="@dimen/details_padding_top"
            android:paddingEnd="@dimen/details_padding"
            android:paddingBottom="48dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPoster"
                android:layout_width="@dimen/details_poster_width"
                android:layout_height="@dimen/details_poster_height"
                app:cardBackgroundColor="#000000"
                app:cardCornerRadius="12dp"
                app:cardElevation="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgDetailPoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@null"
                    android:importantForAccessibility="no"
                    android:background="#222222" />

                <ProgressBar
                    android:id="@+id/detailProgress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_gravity="bottom"
                    android:progressDrawable="@drawable/bg_progress_bar"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="40dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:layout_constraintStart_toEndOf="@id/cardPoster"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cardPoster">

                <TextView
                    android:id="@+id/txtDetailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Chicken Little"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/details_title_text_size"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowRadius="10"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtDetailYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_metadata_pill"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/details_metadata_text_size"
                        android:textStyle="bold"
                        tools:text="2005" />

                    <TextView
                        android:id="@+id/txtDetailGenres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_metadata_pill"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/details_metadata_text_size"
                        tools:text="Animation" />

                    <TextView
                        android:id="@+id/txtDetailContentRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_metadata_pill"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/details_metadata_text_size"
                        android:visibility="gone"
                        tools:text="PG-13"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/txtDetailRuntime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_metadata_pill"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/details_metadata_text_size"
                        tools:text="1h 21m" />

                    <TextView
                        android:id="@+id/txtRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/brand_accent"
                        android:textSize="@dimen/details_rating_text_size"
                        android:textStyle="bold"
                        tools:text="â˜… 5.9" />

                    <TextView
                        android:id="@+id/txtRottenTomatoes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/details_rating_text_size"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        app:drawableStartCompat="@drawable/ic_tomato"
                        android:drawablePadding="6dp"
                        android:visibility="gone"
                        tools:text="95%"
                        tools:visibility="visible"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtDetailPlot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/details_plot_text_size"
                    android:maxLines="5"
                    android:ellipsize="end"
                    tools:text="After ruining his reputation with the town..." />

                <LinearLayout
                    android:id="@+id/layoutActionButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingVertical="10dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnResume"
                        style="@style/VOD.Button.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="@string/btn_resume"
                        android:contentDescription="@string/a11y_resume_playback"
                        app:icon="@drawable/ic_play"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPlay"
                        style="@style/VOD.Button.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="@string/btn_play"
                        android:contentDescription="@string/a11y_play_from_start"
                        app:icon="@drawable/ic_play" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnWatchLater"
                        style="@style/VOD.Button.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="@string/btn_watch_later"
                        android:contentDescription="@string/a11y_watchlist_add"
                        app:icon="@drawable/ic_add" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubtitles"
                        style="@style/VOD.Button.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cc_short"
                        android:contentDescription="@string/a11y_subtitles_available"
                        app:icon="@drawable/ic_subtitles"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:id="@+id/dividerCredits"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:background="@color/divider_light" />

                <LinearLayout
                    android:id="@+id/layoutCredits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtDirector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_tertiary"
                        android:textSize="@dimen/details_credits_text_size"
                        tools:text="Director: Alexs Stadermann" />

                    <TextView
                        android:id="@+id/txtStarring"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_tertiary"
                        android:textSize="@dimen/details_credits_text_size"
                        tools:text="Starring: N/A" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutEpisodes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/details_episodes_title"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"
                        android:accessibilityHeading="true"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvEpisodes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:contentDescription="@string/a11y_episode_list"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="32dp"
        android:background="@drawable/sel_menu_item_pill"
        android:contentDescription="@string/a11y_back_button"
        android:focusable="true"
        android:clickable="true"
        android:elevation="24dp"
        android:padding="@dimen/icon_button_padding_large"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_back"
        app:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
