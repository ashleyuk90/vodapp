<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_secondary"
    android:padding="24dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout_confirm_title"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/logout_confirm_message"
        android:textColor="@color/text_secondary"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="end"
        android:clipChildren="false"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/btnDialogCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/focus_dialog_btn"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="@string/logout_confirm_no"
            android:textColor="@color/sel_menu_text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:focusable="true" />

        <TextView
            android:id="@+id/btnDialogLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/focus_dialog_btn_danger"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="@string/logout_confirm_yes"
            android:textColor="@color/sel_menu_text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>
