<?xml version="1.0" encoding="utf-8"?>
<!-- Skeleton loading row for dashboard -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="@dimen/spacing_lg">
    
    <!-- Section title skeleton -->
    <View
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/home_section_margin_start"
        android:layout_marginBottom="@dimen/home_section_margin_bottom"
        android:background="@drawable/shimmer_animation"/>
    
    <!-- Horizontal scroll of skeleton cards -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:paddingStart="@dimen/home_list_side_padding">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <include layout="@layout/item_skeleton_card_horizontal"/>
            <include layout="@layout/item_skeleton_card_horizontal"/>
            <include layout="@layout/item_skeleton_card_horizontal"/>
            <include layout="@layout/item_skeleton_card_horizontal"/>
            <include layout="@layout/item_skeleton_card_horizontal"/>
            <include layout="@layout/item_skeleton_card_horizontal"/>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
