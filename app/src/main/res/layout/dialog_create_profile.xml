<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog_card">

    <TextView
        android:id="@+id/txtCreateProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_profile"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCreateProfileSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:text="@string/create_profile_dialog_subtitle"
        android:textColor="@color/text_tertiary"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etProfileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search_input"
        android:hint="@string/profile_name_hint"
        android:imeOptions="actionDone"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:nextFocusDown="@id/btnCreateProfileCancel"
        android:padding="14dp"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_muted"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/layoutDialogActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateProfileCancel"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/sel_button_focus"
            android:focusable="true"
            android:nextFocusRight="@id/btnCreateProfileCreate"
            android:text="@android:string/cancel"
            android:textAllCaps="true"
            android:textColor="@color/selector_btn_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateProfileCreate"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@drawable/sel_button_focus"
            android:focusable="true"
            android:nextFocusLeft="@id/btnCreateProfileCancel"
            android:text="@string/create_profile_action"
            android:textAllCaps="true"
            android:textColor="@color/selector_btn_text" />
    </LinearLayout>

</LinearLayout>
